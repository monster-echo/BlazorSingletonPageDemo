@page "/counter"
@rendermode InteractiveAuto

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @CounterService.Counter</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private static Services.CounterService CounterService = new Services.CounterService();

    public Counter()
    {

    }

    private void IncrementCount()
    {
        CounterService.Counter++;
    }
}
